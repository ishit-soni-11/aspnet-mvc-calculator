@{
    ViewData["Title"] = "Calculator";
}
<h2>Welcome to the Calculator!</h2>

<h2>Simple Calculator</h2>

<form method="post">
    <input type="number" step="any" name="number1" required placeholder="First number" />
    <input type="number" step="any" name="number2" required placeholder="Second number" />
    <button type="submit" name="operation" value="Add">Add</button>
    <button type="submit" name="operation" value="Subtract">Subtract</button>
</form>

@if (ViewBag.Result != null)
{
    <h3>Result: @ViewBag.Result</h3>
}
