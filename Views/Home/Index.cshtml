@{
    ViewData["Title"] = "Home";
    Layout = "_Layout";
}

<style>
    .home-hero {
        background: linear-gradient(135deg, #0d6efd 0%, #6f42c1 100%);
        color: #fff;
        border-radius: 1rem;
        padding: 3rem 2rem;
        margin-bottom: 3rem;
        box-shadow: 0 4px 24px rgba(80, 80, 120, 0.08);
    }

    .home-feature-card {
        border-radius: 1rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.03);
        padding: 2rem;
        margin-bottom: 2rem;
        background: #fff;
    }

    .btn-xl {
        padding: 1rem 2rem;
        font-size: 1.2rem;
    }
</style>

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="home-hero text-center">
                <h1 class="display-4 fw-bold mb-3">XCalc</h1>
                <p class="lead mb-4">A smart, modern calculator with history tracking and a journey through the
                    evolution of calculation.</p>
                <div class="d-grid gap-3 d-sm-flex justify-content-sm-center">
                    <a asp-controller="Calculator" asp-action="Index" class="btn btn-light btn-xl px-4 gap-3">
                        <i class="bi bi-calculator"></i> Start Calculating
                    </a>
                    <a asp-controller="Home" asp-action="CalculationHistory" class="btn btn-outline-light btn-xl px-4">
                        <i class="bi bi-clock-history"></i> Evaloution Of CalculationHistory
                    </a>


                </div>
            </div>

            <div class="home-feature-card">
                <h3 class="mb-3">Features</h3>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Basic and advanced calculations</li>
                    <li class="list-group-item">Track and review your calculation history</li>
                    <li class="list-group-item">Discover the history of calculation through the ages</li>
                    <li class="list-group-item">Responsive, modern design for any device</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
