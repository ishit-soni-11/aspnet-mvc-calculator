@{
    ViewData["Title"] = "XCalc - Smart Calculator";
    Layout = "_Layout";
}

<style>
    .home-hero {
        background: linear-gradient(135deg, #0d6efd 0%, #6f42c1 100%);
        color: #fff;
        border-radius: 1rem;
        padding: 3rem 2rem;
        margin-bottom: 3rem;
        box-shadow: 0 8px 32px rgba(13, 110, 253, 0.15);
        position: relative;
        overflow: hidden;
    }

    .home-hero::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
        animation: float 6s ease-in-out infinite;
    }

    @keyframes
    float {

        0%,
        100% {
            transform: translateY(0px) rotate(0deg);
        }

        50% {
            transform: translateY(-20px) rotate(180deg);
        }
    }

    .home-hero .content {
        position: relative;
        z-index: 1;
    }

    .home-feature-card {
        border-radius: 1rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        padding: 2rem;
        margin-bottom: 2rem;
        background: #fff;
        border: 1px solid rgba(0, 0, 0, 0.05);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .home-feature-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
    }

    .btn-xl {
        padding: 1rem 2rem;
        font-size: 1.2rem;
        border-radius: 0.75rem;
        font-weight: 600;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-xl:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }

    .feature-icon {
        color: #0d6efd;
        font-size: 1.5rem;
        margin-right: 1rem;
    }

    .list-group-item {
        border: none;
        padding: 1rem 0;
        display: flex;
        align-items: center;
        font-size: 1.1rem;
    }

    .list-group-item:not(:last-child) {
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    }

    .stats-section {
        background: linear-gradient(45deg, #f8f9fa 0%, #e9ecef 100%);
        border-radius: 1rem;
        padding: 2rem;
        margin-top: 2rem;
        text-align: center;
    }

    .stat-item {
        padding: 1rem;
    }

    .stat-number {
        font-size: 2rem;
        font-weight: bold;
        color: #0d6efd;
    }

    .stat-label {
        color: #6c757d;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    @media
    (max-width: 768px) {
        .home-hero {
            padding: 2rem 1rem;
        }

        .btn-xl {
            padding: 0.8rem 1.5rem;
            font-size: 1rem;
        }

        .d-sm-flex {
            flex-direction: column;
        }

        .btn-xl {
            margin-bottom: 1rem;
        }
    }
</style>

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="home-hero text-center">
                <div class="content">
                    <h1 class="display-4 fw-bold mb-3">
                        <i class="bi bi-calculator-fill me-3"></i>XCalc
                    </h1>
                    <p class="lead mb-4">
                        A smart, modern calculator with history tracking and a journey through the
                        evolution of calculation technology.
                    </p>
                    <div class="d-grid gap-3 d-sm-flex justify-content-sm-center">
                        <a asp-controller="Calculator" asp-action="Index" class="btn btn-light btn-xl px-4"
                            aria-label="Start using the calculator">
                            <i class="bi bi-calculator"></i> Start Calculating
                        </a>
                        <a asp-controller="Home" asp-action="CalculationHistory"
                            class="btn btn-outline-light btn-xl px-4"
                            aria-label="View calculation history and evolution">
                            <i class="bi bi-clock-history"></i> Evolution of Calculations
                        </a>
                    </div>
                </div>
            </div>

            <div class="home-feature-card">
                <h3 class="mb-4">
                    <i class="bi bi-star-fill feature-icon"></i>Features
                </h3>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <i class="bi bi-check-circle-fill feature-icon"></i>
                        <div>
                            <strong>Basic and Advanced Calculations</strong>
                            <div class="text-muted">Perform everything from simple arithmetic to complex operations
                            </div>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <i class="bi bi-clock-history feature-icon"></i>
                        <div>
                            <strong>Track Calculation History</strong>
                            <div class="text-muted">Review and reuse your previous calculations</div>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <i class="bi bi-book feature-icon"></i>
                        <div>
                            <strong>History of Calculation</strong>
                            <div class="text-muted">Discover how calculation evolved through the ages</div>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <i class="bi bi-phone feature-icon"></i>
                        <div>
                            <strong>Responsive Design</strong>
                            <div class="text-muted">Works perfectly on desktop, tablet, and mobile devices</div>
                        </div>
                    </li>
                </ul>
            </div>

            <div class="stats-section">
                <div class="row">
                    <div class="col-md-4 stat-item">
                        <div class="stat-number">∞</div>
                        <div class="stat-label">Calculations</div>
                    </div>
                    <div class="col-md-4 stat-item">
                        <div class="stat-number">24/7</div>
                        <div class="stat-label">Available</div>
                    </div>
                    <div class="col-md-4 stat-item">
                        <div class="stat-number">100%</div>
                        <div class="stat-label">Accurate</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

